<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_edu_session_form" model="ir.ui.view">
            <field name="name">edu.session.form</field>
            <field name="model">edu.session</field>
            <field name="arch" type="xml">
                <form string="Lớp học">
                    <header>
                        <button name="action_open" string="Mở đăng ký" type="object" 
                                invisible="state != 'draft'" class="oe_highlight"/>
                        <button name="action_done" string="Kết thúc" type="object" 
                                invisible="state != 'open'" class="oe_highlight"/>
                        <button name="action_cancel" string="Hủy" type="object" 
                                invisible="state not in ('draft', 'open')"/>
                        <button name="action_reset_draft" string="Reset to Draft" type="object" 
                                invisible="state not in ('cancel', 'done')" groups="edu_management.group_edu_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,done"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="code" readonly="1"/>
                                <field name="name" readonly="state == 'done'"/>
                                <field name="course_id" readonly="state == 'done'"/>
                                <field name="instructor_id" readonly="state == 'done'"/>
                            </group>
                            <group>
                                <field name="start_date" readonly="state == 'done'"/>
                                <field name="duration" readonly="state == 'done'"/>
                                <field name="end_date"/>
                                <field name="classroom_id" readonly="state == 'done'"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="seats" readonly="state == 'done'"/>
                                <field name="taken_seats" widget="progressbar"/>
                            </group>
                            <group>
                                <field name="product_id" readonly="state == 'done'"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="revenue" groups="edu_management.group_edu_manager"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Học viên">
                                <field name="attendee_ids" readonly="state == 'done'">
                                    <tree>
                                        <field name="name"/>
                                        <field name="email"/>
                                        <field name="phone"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View with colors -->
        <record id="view_edu_session_tree" model="ir.ui.view">
            <field name="name">edu.session.tree</field>
            <field name="model">edu.session</field>
            <field name="arch" type="xml">
                <tree string="Lớp học" 
                      decoration-danger="taken_seats &gt; 100" 
                      decoration-info="duration &lt; 5">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="course_id"/>
                    <field name="instructor_id"/>
                    <field name="start_date"/>
                    <field name="duration" invisible="1"/>
                    <field name="seats"/>
                    <field name="taken_seats" widget="progressbar"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_edu_session_kanban" model="ir.ui.view">
            <field name="name">edu.session.kanban</field>
            <field name="model">edu.session</field>
            <field name="arch" type="xml">
                <kanban default_group_by="course_id">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="course_id"/>
                    <field name="instructor_id"/>
                    <field name="attendee_ids"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="oe_kanban_content">
                                    <div><strong><field name="code"/>: <field name="name"/></strong></div>
                                    <div>Giảng viên: <field name="instructor_id"/></div>
                                    <div>Học viên: <t t-esc="record.attendee_ids.raw_value.length"/></div>
                                    <div>Trạng thái: <field name="state"/></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Calendar View -->
        <record id="view_edu_session_calendar" model="ir.ui.view">
            <field name="name">edu.session.calendar</field>
            <field name="model">edu.session</field>
            <field name="arch" type="xml">
                <calendar string="Lịch học" date_start="start_date" date_stop="end_date" 
                          color="course_id" mode="month">
                    <field name="name"/>
                    <field name="instructor_id"/>
                </calendar>
            </field>
        </record>

        <!-- Pivot View -->
        <record id="view_edu_session_pivot" model="ir.ui.view">
            <field name="name">edu.session.pivot</field>
            <field name="model">edu.session</field>
            <field name="arch" type="xml">
                <pivot string="Phân tích lớp học">
                    <field name="course_id" type="row"/>
                    <field name="instructor_id" type="row"/>
                    <field name="start_date" interval="month" type="col"/>
                    <field name="seats" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Graph View - Bar -->
        <record id="view_edu_session_graph_bar" model="ir.ui.view">
            <field name="name">edu.session.graph.bar</field>
            <field name="model">edu.session</field>
            <field name="arch" type="xml">
                <graph string="Số học viên theo khóa" type="bar">
                    <field name="course_id"/>
                    <field name="attendee_ids" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Graph View - Pie -->
        <record id="view_edu_session_graph_pie" model="ir.ui.view">
            <field name="name">edu.session.graph.pie</field>
            <field name="model">edu.session</field>
            <field name="arch" type="xml">
                <graph string="Tỉ lệ lớp theo trạng thái" type="pie">
                    <field name="state"/>
                </graph>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_edu_session_search" model="ir.ui.view">
            <field name="name">edu.session.search</field>
            <field name="model">edu.session</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm lớp học">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="course_id"/>
                    <field name="instructor_id"/>
                    <filter string="Dự thảo" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Đang mở" name="open" domain="[('state', '=', 'open')]"/>
                    <filter string="Đã kết thúc" name="done" domain="[('state', '=', 'done')]"/>
                    <group expand="0" string="Nhóm theo">
                        <filter string="Khóa học" name="course" context="{'group_by': 'course_id'}"/>
                        <filter string="Giảng viên" name="instructor" context="{'group_by': 'instructor_id'}"/>
                        <filter string="Trạng thái" name="state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_edu_session" model="ir.actions.act_window">
            <field name="name">Lớp học</field>
            <field name="res_model">edu.session</field>
            <field name="view_mode">tree,form,kanban,calendar,pivot,graph</field>
        </record>
    </data>
</odoo>
